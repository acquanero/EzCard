<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectNewCardForService">

    <TextView
        android:id="@+id/textViewTitleSelectCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/select_a_card_for_provider"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/lineSeparator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/lineSeparator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_gap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitleSelectCard"
        app:layout_constraintBottom_toTopOf="@+id/scrollViewSelectCard"
        android:background="@drawable/boton_estilo"
        />

    <ScrollView
        android:id="@+id/scrollViewSelectCard"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        app:layout_constraintBottom_toTopOf="@+id/dessacociateCardsButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lineSeparator">

        <LinearLayout
            android:id="@+id/linearLayoutSelectCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

        </LinearLayout>


    </ScrollView>

    <Button
        android:id="@+id/dessacociateCardsButton"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/default_gap"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollViewSelectCard"
        android:background="@drawable/boton_estilo_cancel"
        android:textColor="@color/colorWhite"
        android:text="@string/disassociate_from_all_cards" />

</androidx.constraintlayout.widget.ConstraintLayout>